mixin button(text, icon)
  if click
  a.btn.btn-labeled&attributes(attributes)
    if text
      span.btn-label: i(class='fa fa-'+icon)
      = text
    else
      i(class='fa fa-'+icon)

mixin btnbar
  .navbar.navbar-default
    .navbar-form
      block

mixin widget(title, icon)
  div(jarvis-widget, data-widget-editbutton='false', data-widget-colorbutton='false', data-widget-deletebutton='false', data-widget-fullscreenbutton="false", id!=attributes.id)
    header
      if icon
        span.widget-icon
          i(class='fa fa-'+icon)
      h2= title
    div
      .widget-body(class!=attributes.class)
        block

mixin navbar-simple(title, href)
  nav&attributes(attributes)(role='navigation')
    .nav-wrapper.container
      a#logo-container.brand-logo(href=href)= title
      ul.right.hide-on-med-and-down
        block
      ul#nav-mobile.side-nav
        block
      a.button-collapse(href='#', data-activates='nav-mobile'): i.material-icons menu

mixin navbar-unresponsive(title, href)
  nav&attributes(attributes)(role='navigation')
    .nav-wrapper.container
      a#logo-container.brand-logo(href=href)= title
      ul.right
        block
